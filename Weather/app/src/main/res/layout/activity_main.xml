<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/s"
    android:id="@+id/w_backgrounp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/w_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/user"/>

        <AutoCompleteTextView
            android:id="@+id/edit_city"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:hint="城市天气"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:editable="false"/>

        <ImageView
            android:id="@+id/w_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/wset"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/w_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="italic"
            android:text="- -"
            android:gravity="center|bottom"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/w_weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="italic"
            android:text="- -"
            android:gravity="center|top"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/w_temp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="80dp"
            android:textColor="#fff"
            android:textStyle="italic"
            android:text="- -"
            android:gravity="center|top"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/w_week"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="- -"
            android:gravity="bottom|right"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:text="今天"
            android:gravity="bottom|left"/>

        <TextView
            android:id="@+id/w_hightemp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="- -"
            android:gravity="bottom|right"/>

        <TextView
            android:id="@+id/w_lowtemp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#e6e0e0"
            android:textStyle="bold"
            android:text="- -"
            android:gravity="bottom|left"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b6b6b6"/>

    <HorizontalScrollView
        android:id="@+id/w_feature"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/w_grallery"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b6b6b6"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textColor="#fff"
               android:textSize="22dp"
               android:textStyle="italic"
               android:text="风向："
               android:gravity="right"/>

           <TextView
               android:id="@+id/w_wind_direction"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textColor="#fff"
               android:textSize="18dp"
               android:textStyle="bold"
               android:text="- -"
               android:layout_marginBottom="10dp"
               android:gravity="left|center"/>

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="italic"
                android:text="风力："
                android:gravity="right"/>

            <TextView
                android:id="@+id/w_wind_power"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="- -"
                android:gravity="left|center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="italic"
                android:text="最高温度："
                android:gravity="right"/>

            <TextView
                android:id="@+id/w_high_temp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="- -"
                android:gravity="left|center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="italic"
                android:text="最低温度："
                android:gravity="right"/>

            <TextView
                android:id="@+id/w_low_temp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="- -"
                android:gravity="left|center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="italic"
                android:text="日期："
                android:gravity="right"/>

            <TextView
                android:id="@+id/w_high_humi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="- -"
                android:gravity="left|center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="italic"
                android:text="星期："
                android:gravity="right"/>

            <TextView
                android:id="@+id/w_low_humi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="- -"
                android:gravity="left|center"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
