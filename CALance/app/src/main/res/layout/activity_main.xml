<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroup"
   >

        <EditText
            android:hint="CALance"
            android:maxLength="12"
            android:editable="false"
            android:id="@+id/cal_input"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_press"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:gravity="bottom|right"
            android:paddingRight="30dp"
            android:textStyle="bold"

            />

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/cal_input"
        android:layout_marginTop="15dp"
        >

        <Button
            android:gravity="center"
            android:id="@+id/but_zuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="("
            android:background="@drawable/kuohao_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_you"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text=")"
            android:layout_marginLeft="20dp"
            android:background="@drawable/kuohao_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="del"
            android:layout_marginLeft="20dp"
            android:background="@drawable/cleardel_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yuansuan_press"
            />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/one"
        android:layout_marginTop="12dp"
        >

        <Button
            android:gravity="center"
            android:id="@+id/but_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="7"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="8"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="9"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="-"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yuansuan_press"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/two"
        android:layout_marginTop="12dp"
        >

        <Button
            android:gravity="center"
            android:id="@+id/but_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="4"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="5"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="6"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="*"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yuansuan_press"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/three"
        android:layout_marginTop="12dp"
        >

        <Button
            android:gravity="center"
            android:id="@+id/but_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="1"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="3"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="/"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yuansuan_press"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/five"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/four"
        android:layout_marginTop="12dp"
        >

        <Button
            android:gravity="center"
            android:id="@+id/but_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="."
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="0"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="C"
            android:layout_marginLeft="20dp"
            android:background="@drawable/cleardel_press"
            />
        <Button
            android:gravity="center"
            android:id="@+id/but_equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="="
            android:layout_marginLeft="20dp"
            android:background="@drawable/equal_press"
            />
    </LinearLayout>

</LinearLayout>
