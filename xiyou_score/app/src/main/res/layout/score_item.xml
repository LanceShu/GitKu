<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:id="@+id/score_layout"
    android:background="@color/color5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="课程名："
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="null"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="选必修："
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/s_team"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="null"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center|left"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="学分："
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/s_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="null"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="绩点："
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/s_gpa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="null"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center|left"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="成绩："
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/s_chengji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="null"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="学院："
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/s_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="null"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center|left"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
